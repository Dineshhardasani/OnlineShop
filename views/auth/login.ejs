<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>
<body>
   <%- include('../includes/navigation.ejs') %>
   <div class="container" style=" max-width:550px">
    <main>
       <% if(errorMessage) {%>
         <div class="user-message user-message--error"><%= errorMessage %></div>
       <% } %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email" ><b>E-mail</b></label>
                <input type="text"  name="email" id="email" value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password"><b>Password</b></label>
                <input type="password" class="fadeIn third" name="password" id="password" value="<%= oldInput.password %>">
            </div>
            <button  type="submit">Login</button>
            <input type="hidden" name="_csrf" class="fadeIn fourth" value="<%= csrfToken %>">
        </form>
        <br>
        <button><a href="/reset" >Forget Password?</a></button>
    </main>
    </div>
<%- include('../includes/end.ejs') %>
